<Window x:Class="Lab_rab_RakhmatullinR.I._БПИ_23_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_rab_RakhmatullinR.I._БПИ_23_01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <TextBlock Grid.ColumnSpan="2" Grid.Row="0" Text="Работа с комплексными числами" 
                  FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Grid.Column="0" Text="Действительная часть (a1):" 
                  Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="RealPartTextBox" Grid.Row="1" Grid.Column="1" 
                Margin="0,0,0,10" Height="25" PreviewTextInput="NumberTextBox_PreviewTextInput"
                PreviewKeyDown="NumberTextBox_PreviewKeyDown" TextChanged="NumberTextBox_TextChanged"/>


        <TextBlock Grid.Row="2" Grid.Column="0" Text="Мнимая часть (b1):" 
                  Margin="0,0,10,10" VerticalAlignment="Center"/>
        <TextBox x:Name="ImaginaryPartTextBox" Grid.Row="2" Grid.Column="1" 
                Margin="0,0,0,10" Height="25" PreviewTextInput="NumberTextBox_PreviewTextInput"
                PreviewKeyDown="NumberTextBox_PreviewKeyDown" TextChanged="NumberTextBox_TextChanged"/>

      
        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" 
                   HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button x:Name="CalculateModulusBtn" Content="Вычислить модуль" 
                   Width="120" Height="30" Margin="0,0,10,0" Click="CalculateModulusBtn_Click"/>
            <Button x:Name="CalculateArgumentBtn" Content="Вычислить аргумент" 
                   Width="120" Height="30" Click="CalculateArgumentBtn_Click"/>
        </StackPanel>

   
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Модуль:" 
                  Margin="0,0,10,10" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBlock x:Name="ModulusResultText" Grid.Row="4" Grid.Column="1" 
                  Margin="0,0,0,10" VerticalAlignment="Center"/>

        <TextBlock Grid.Row="5" Grid.Column="0" Text="Аргумент (градусы):" 
                  Margin="0,0,10,10" VerticalAlignment="Center" FontWeight="Bold"/>
        <TextBlock x:Name="ArgumentResultText" Grid.Row="5" Grid.Column="1" 
                  Margin="0,0,0,10" VerticalAlignment="Center"/>

    
        <TextBlock Grid.Row="6" Grid.Column="0" Text="История вычислений:" 
                  Margin="0,10,10,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <ListBox x:Name="HistoryListBox" Grid.Row="6" Grid.Column="1" 
                Margin="0,10,0,0" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
